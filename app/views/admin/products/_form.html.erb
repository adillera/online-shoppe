<%= form_for [:admin, @product], html:{ multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :name, t('admin.products.form.name') %>
    <%= f.text_field :name, class: "form-control", placeholder: t('admin.products.form.name'), alt: t('admin.products.form.name') %>
  </div>

  <div class="form-group">
    <%= f.label :description, t('admin.products.form.description') %>
    <%= f.text_area :description, class: "form-control", placeholder: t('admin.products.form.description'), alt: t('admin.products.form.description') %>
  </div>

  <div class="form-group">
    <%= f.label :price, t('admin.products.form.price') %>
    <%= f.text_field :price, class: "form-control", placeholder: t('admin.products.form.price'), alt: t('admin.products.form.price') %>
  </div>

  <div class="checkbox">
    <%= f.label :is_active do %>
      <%= f.check_box :is_active, alt: t('admin.products.form.is_active') %>
      <%= t('admin.products.form.is_active') %>
    <% end %>
  </div>

  <% unless @product.id %>
    <%= fields_for :image, @product.images do |i| %>
      <div class="form-group">
        <%= i.label :image, t('admin.products.form.image') %>
        <%= i.file_field :photo, class: "form-control", placeholder: t('admin.products.form.image'), alt: t('admin.products.form.image') %>
      </div>
    <% end %>
  <% end %>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
